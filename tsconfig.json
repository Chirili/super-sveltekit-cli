{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "target": "ES2016",
    "module": "ES2022",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "Node16"
    
  },
  "include": ["./src/**/*","./src/templates/**/*.eta"],
  "exclude": ["./dist"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
  }
}
